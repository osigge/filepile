<% form_tag session_path do %>    
  <%= hidden_field_tag :request_uri, request.request_uri %> 
  
  <%= label_tag :email, 'E-Mail-Adresse: *' %>
  <%= text_field_tag :email, @email %>

  <%= label_tag :password, 'Passwort: *' %>
  <%= password_field_tag :password %>

  <%= label_tag :remember_me, 'Eingeloggt bleiben?' %>
  <%= check_box_tag :remember_me, @remember_me %>

  <p><%= submit_tag 'Anmelden' %></p>
<% end %>
